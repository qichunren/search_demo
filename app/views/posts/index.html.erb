<h1>Listing posts</h1>

<div><%= form_tag search_posts_path, :method => :get do %>
<%= text_field_tag :q, params[:q] %>
<%= submit_tag "search" %>
<% end %>
<table>
  <tr>
    <th>Titile</th>
    <th>Content</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.subject%></td>
    <td><%= post.content %></td>
    <td><%= post.author %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
